<!DOCTYPE html>
<html>
  <head>
    <title>PsychE</title>

    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <javascript_include_tag "vendor/modernizr" />
  </head>
  <body>
    <div class="header-subnav row">
      <div class="leftnav">
        <% if user_signed_in? %>
          <div class="navbaritems" ><%= link_to('Home', root_path) %> </div>
       </div>
       <div class="rightnav">
        <div class="navbaritems" >Logged in as <%= current_user.username %></div>
        <% else %>
          <div class="navbaritems" ><%= link_to('Sign Up', new_user_registration_path)  %></div>
        <% end %>
        <% if user_signed_in? %>
          <div class="navbaritems" > <%= link_to('Sign Out', destroy_user_session_path, method: :delete) %></div>
        <% else %>
          <div class="navbaritems" ><%= link_to('Sign In', new_user_session_path)  %></div>
        <% end %>
      </div>
    </div>
    <p class="notice flash"><%= notice %></p>
    <p class="alert flash"><%= alert %></p>
      <%= yield %>
  </body>
</html>
