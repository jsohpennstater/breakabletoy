<% if current_user.admin %>
<p> Question Set:
<% @questionnaire.questions.each_with_index do |question, index| %>
  <br>
  <%= index + 1 %>. <%= question.content %>
<% end %>
<br>
<% @assigned_users.each do |user| %>
<br>
<% total_score = 0 %>
<%= user.first_name%> <%= user.last_name %>
<% @questions.each do |question| %>
  <% question.answers.where(user_id: user.id).each do |answer| %>
    <% total_score += answer.answer %>
  <% end %>
<% end %>
(Score: <%= total_score %>)
<% end %>

<p class="questionnaire-text"><%= link_to "Edit", edit_questionnaire_path(@questionnaire) %></p>
<p class="questionnaire-text"><%= link_to "Delete", questionnaire_path(@questionnaire), method: :delete, id: "delete questionnaire" %></p>
<p class="question-text"><%= link_to "Add Question", new_questionnaire_question_path(@questionnaire, @question) %></p>
<% end %>

<% unless current_user.admin %>
  <div id="app"></div>
<% end %>

<p class="questionnaire-text"><%= link_to "Back to Index", questionnaires_path %></p>
