<div class="questionnaire-show-page small-12 columns">
  <div class="questionnaire-show">
    <p class="questionnaire-text"><%= @questionnaire.title %></p><p class="questionnaire-text"><%= @questionnaire.physician_name %></p>
    <p class="questionnaire-text"><%= @questionnaire.clinic_address %></p>
    <p class="questionnaire-text"><%= @questionnaire.clinic_phone %></p>
</div>
<% if current_user.admin %>
<div class="row">
<p class="questionnaire-text"><%= link_to "Edit", edit_questionnaire_path(@questionnaire) %>
<%= link_to "Delete", questionnaire_path(@questionnaire), method: :delete, id: "delete questionnaire" %></p>
<% end %>
</div>
</div>
    <% if current_user.admin %>
    <div class="row">
      <div class="question small-8 columns">
      <p> Question Set:
      <% @questionnaire.questions.each_with_index do |question, index| %>
        <br>
        <%= index + 1 %>. <%= question.content %>
      <% end %>
      <p class="question-text"><%= link_to "Add Question", new_questionnaire_question_path(@questionnaire, @question) %>
      </p>
    </div>
  <div class="questionscore small-3 columns">
    <p> Questionnaire Score:
      <br>
      <% @assigned_users.each do |user| %>
      <% total_score = 0 %>
      <% @questions.each do |question| %>
        <% question.answers.where(user_id: user.id).each do |answer| %>
          <% total_score += answer.answer %>
        <% end %>
      <% end %>
      <%= user.first_name%> <%= user.last_name %> (Score: <%= total_score %>)
      <% end %>
      <% end %>
    </p>
 </div>
</div>

<div class="questions row large-12 columns">
<% unless current_user.admin %>
  <div id="app"></div>
<% end %>
</div>

<p class="questionnaire-text"><%= link_to "Back to Index", questionnaires_path %></p>
